.button span {
  cursor: pointer;
  display: inline-block;
  position: relative;
  transition: 0.5s;
}
.button span:after {
  position: absolute;
  opacity: 0;
  top: 0;
}
.button:hover {
  transform: scale(1.1);
}
.button:hover span {
}
.button:hover span:after {
  opacity: 1;
  right: 0;
}
