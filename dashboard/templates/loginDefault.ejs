<%- include('blocks/header', {bot: bot, user: user, auth: auth}) %>
<style>
 
.jumbotron {
 width: 70%;
 margin: auto;
 background-color: #18191C;
}
h1 {
 font-family: 'Arial';
 margin: auto;
}
.content {
    margin-left: auto;
    margin-right: auto;
    width: 30%;
}
.button {
  margin: auto;
  border-radius: 4px;
  background-color: #3B5998;
  border: none;
  color: #FFFFFF;
  text-align: center;
  font-size: 12px;
  width: 85px;
  height: 30px;
  align: center;
  transition: all 0.5s;
  cursor: pointer;
  margin: 5px;
  transition: transform .8s;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.4), 0 6px 20px 0 rgba(0, 0, 0, 0.29);
}
.button span {
  cursor: pointer;
  display: inline-block;
  position: relative;
  transition: 0.5s;
}
.button span:after {
  position: absolute;
  opacity: 0;
  top: 0;
}
.button:hover {
  transform: scale(1.1);
}
.button:hover span {
}
.button:hover span:after {
  opacity: 1;
  right: 0;
}
</style>
</head>

<body>
 <div class="container">
  <div class="jumbotron">
   <div class="content">
     <div class="container" style="">
      <h1>
        Login
      </h1>
			  <form method="/login/default/post">
						<div class="form-group">
							<label for="username">Email</label>
							<input type="text" style="" class="form-control" style="margin-left: -50px;" id="email" name="email" placeholder="Seu email" value="" required>
							<label for="username">Senha</label>
							<input type="text" style="" class="form-control" style="margin-left: -50px;" id="senha" name="senha" placeholder="Sua senha" value="" required>
						</div>
       <a href="/login/default"><button type="submit" class="button" style="background-color: #7289DA;"><span>Confirmar</span></button></a>
       <br>
			</form>
       <hr style="color: white; background: white; width: 500px; margin-left: -150px;">
      <h1>
        Register
      </h1>
			  <form method="/login/default/register">
						<div class="form-group">
							<label for="username">Email</label>
							<input type="text" style="" class="form-control" style="" id="email" name="rEmail" placeholder="Seu email" value="" required>
							<label for="username">Senha</label>
							<input type="text" style="" class="form-control" style="" id="senha" name="rSenha" placeholder="Sua senha" value="" required>
						</div>
       <a href="/login/default"><button type="submit" class="button" style="background-color: #7289DA;"><span>Confirmar</span></button></a>
       <br>
			</form>
     </div>
   </div>
  </div>
 </div>
</body>